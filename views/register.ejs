<%- include("./partials/header") %>
<body class="bg-gradient-login">
    <!-- Register Content -->
    <div class="container-login">
      <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-12 col-md-9">
          <div class="card shadow-sm my-5">
            <div class="card-body p-0">
              <div class="row">
                <div class="col-lg-12">
                  <div class="login-form">
                    <div class="text-center">
                      <h1 class="h4 text-gray-900 mb-4">Kayıt Ol</h1>
                    </div>
                    <form id="form2" action="/login" method="POST" class="user">
                      <div class="form-group">
                        <label>Ad Soyad</label>
                        <input type="text" id="fullName" name="fullName" class="form-control" id="exampleInputFirstName" placeholder="Ad Soyad Gir">
                      </div>
                      <div class="form-group">
                        <label>Email</label>
                        <input type="email"  id="remail" name="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"
                          placeholder="Email Adresini Gir ">
                      </div>
                      <div class="form-group">
                        <label>Şifre</label>
                        <input type="password" id="rpassword" name="password" class="form-control" id="exampleInputPassword" placeholder="Şifre">
                      </div>
                     
                      <div class="form-group">
                        <button type="submit" id="register" class="btn btn-primary btn-block">Kayıt Ol</button>
                      </div>
                      
                    </form>
                    <hr>
                    <div class="text-center">
                      <a class="font-weight-bold small" href="/login">Zaten Hesabınız Var mı?</a>
                    </div>
                    <div class="text-center">
                     
                        <div class="version" id="version-ruangadmin">Version 1.1</div>
                      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

<%- include("./partials/footer") %>
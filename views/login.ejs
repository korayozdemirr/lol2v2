<%- include("./partials/header") %>

  <body class="bg-gradient-login">
    <!-- Login Content -->
    <div class="container-login">
      <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-12 col-md-9">
          <div class="card shadow-sm my-5">
            <div class="card-body p-0">
              <div class="row">
                <div class="col-lg-12">
                  <div class="login-form">
                    <div class="text-center">
                      <h1 class="h4 text-gray-900 mb-4">Giriş Yap</h1>
                    </div>
                    <form id="form" action="/login" method="POST" class="user">
                      <div class="form-group">
                        <input type="email" class="form-control" name="email" id="lemail" aria-describedby="emailHelp"
                          placeholder="Email Adresini Gir">
                      </div>
                      <div class="form-group">
                        <input type="password" class="form-control" name="password" id="lpassword" placeholder="Şifre">
                      </div>
                      <div class="form-group">
                        <a href="javascript:void(0);" id="forgotPassword">Şifremi Unuttum</a>
                      </div>
                      <div class="form-group">
                        <div class="custom-control custom-checkbox small" style="line-height: 1.5rem;">
                          <input type="checkbox" class="custom-control-input" id="customCheck">
                          <label class="custom-control-label" for="customCheck">Beni Hatırla</label>
                        </div>
                      </div>
                      <div class="form-group">
                        <button type="submit" id="login" class="btn btn-primary btn-block">Giriş Yap</button>

                      </div>
                      <!--<hr>
                      <a href="index.html" class="btn btn-google btn-block">
                        <i class="fab fa-google fa-fw"></i> Login with Google
                      </a>
                      <a href="index.html" class="btn btn-facebook btn-block">
                        <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                      </a>
                    </form>
                -->
                      <hr>
                      <div class="text-center">
                        <a class="font-weight-bold small" href="/register">Hesap Oluştur!</a>
                      </div>
                      <div class="text-center">
                        <div class="version" id="version-ruangadmin">Version 1.1</div>
                      </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--reset password-->

    <%- include("./partials/footer") %>

      <script type="text/javascript">
        $(function () {
          $("#forgotPassword").click(async () => {
            const { value: email } = await Swal.fire({
              title: 'Şifremi Unuttum',
              input: 'email',
              inputLabel: 'Email Adresiniz',
              inputPlaceholder: 'Email Adresini Girin',
              confirmButtonText:'Gönder'
            })

            if (email) {
              $.ajax({
                type: "POST",
                url: "/forgotpassword",
                data: {"email":email},
                success:async function(response){
                  if(response == "ok"){
                  await Swal.fire({
                    icon:"success",
                    title:"Şifremi Unuttum",
                    text:`Sıfırlama linki gönderildi: ${email}`,
                    confirmButtonText:"Tamam"
                  });
                  }else{
                    Swal.fire({
                      icon:"error",
                      title:"Şifremi Unuttum",
                      text:`${email}: Eposta adresini bulamadık Hesap silinmiş olabilir.`,
                      confirmButtonText:"Tamam"
                    });
                  }
                }
                
              });
              
             
            }
          });
        });

      </script>